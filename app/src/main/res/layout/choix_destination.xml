<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_Alpes"
        android:layout_width="187dp"
        android:layout_height="92dp"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="32dp"
        android:text="@string/alpes"
        app:layout_constraintBottom_toTopOf="@+id/btn_Atlantique"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785" />

    <Button
        android:id="@+id/btn_Atlantique"
        android:layout_width="187dp"
        android:layout_height="92dp"
        android:layout_marginBottom="28dp"
        android:text="@string/atlantique"
        app:layout_constraintBottom_toTopOf="@+id/btn_cotedazur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_paris"
        android:layout_width="187dp"
        android:layout_height="92dp"
        android:layout_marginBottom="116dp"
        android:text="@string/paris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cotedazur"
        android:layout_width="187dp"
        android:layout_height="92dp"
        android:layout_marginBottom="32dp"
        android:text="@string/c_te_d_azur"
        app:layout_constraintBottom_toTopOf="@+id/btn_paris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


